<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Header with NEAL.FUN -->
    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INFINITE CRAFTLE"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"/>

    <!-- Main crafting area -->
    <FrameLayout
        android:id="@+id/crafting_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EEEEEE"/>

    <!-- Drag elements to craft text -->
    <TextView
        android:id="@+id/drag_elements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drag elements to craft â†’"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"/>

    <!-- Elements to craft -->
    <LinearLayout
        android:id="@+id/elements_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/element_water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’§ Water"
            android:padding="10dp"
            android:background="@drawable/element_background"/>

        <TextView
            android:id="@+id/element_fire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”¥ Fire"
            android:padding="10dp"
            android:background="@drawable/element_background"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/element_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’¨ Wind"
            android:padding="10dp"
            android:background="@drawable/element_background"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/element_earth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŒ Earth"
            android:padding="10dp"
            android:background="@drawable/element_background"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Reset button -->
    <Button
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Limpar"
        android:padding="8dp"
        android:background="?attr/selectableItemBackground"
        android:textColor="@android:color/black"/>

</LinearLayout>
